
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  googleId  String   @unique
  firstName String?
  lastName  String?
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet    Wallet?
  apiKeys   ApiKey[]

  @@map("users")
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Decimal  @default(0.00) @db.Decimal(20, 2)
  currency  String   @default("NGN")
  version   Int      @default(0) // Optimistic locking
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@map("wallets")
}

model ApiKey {
  id          String   @id @default(uuid())
  userId      String
  
  // 1. Security: Store the HASH, not the key
  keyHash     String   @unique 
  
  // Lookup Optimization (First 8 chars of sk_live_...)
  prefix      String   @default("") 
  
  // 2. Display: Show first/last chars so user knows which key it is
  maskedKey   String   // e.g., "sk_live_...43a2"
  
  name        String
  
  // 3. Permissions: JSON array or specific Enum array
  permissions String[] // ["deposit", "transfer", "read"]
  
  // 4. Lifecycle Management
  expiresAt   DateTime
  lastUsedAt  DateTime?
  isRevoked   Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id])
  
  @@index([prefix])
  @@map("api_keys")
}

model Transaction {
  id          String            @id @default(uuid())
  walletId    String
  amount      Decimal           @db.Decimal(20, 2)
  type        TransactionType
  status      TransactionStatus @default(PENDING)
  reference   String            @unique
  metadata    Json?
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  wallet Wallet @relation(fields: [walletId], references: [id])

  @@index([walletId])
  @@index([reference])
  @@map("transactions")
}

enum TransactionType {
  DEPOSIT
  TRANSFER_IN
  TRANSFER_OUT
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}
